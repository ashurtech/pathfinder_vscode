{
  "name": "api-helper-extension",
  "displayName": "API Helper Extension",
  "description": "VS Code extension for REST API development with OpenAPI schema support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "api-helper-extension.helloWorld",
        "title": "Hello World",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.addEnvironment",
        "title": "Add API Environment",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.listEnvironments",
        "title": "List API Environments",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.deleteEnvironment",
        "title": "Delete API Environment",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.loadSchemaFromUrl",
        "title": "Load Schema from URL",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.loadSchemaFromFile",
        "title": "Load Schema from File",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.showSchemaInfo",
        "title": "Show Schema Information",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.showStorageStats",
        "title": "Show Storage Statistics",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.refreshTree",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.showEnvironmentDetails",
        "title": "Show Environment Details",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.showSchemaDetails",
        "title": "Show Schema Details",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.showEndpointDetails",
        "title": "Show Endpoint Details",
        "category": "API Helper"
      },
      {
        "command": "api-helper-extension.generateCodeForEndpoint",
        "title": "Generate Code",
        "icon": "$(code)",
        "category": "API Helper"
      }
    ],
    "configuration": {
      "title": "API Helper",
      "properties": {
        "apiHelper.requestTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Default timeout for API requests in milliseconds"
        },
        "apiHelper.defaultCodeFormat": {
          "type": "string",
          "enum": ["curl", "ansible", "powershell", "javascript", "python"],
          "default": "curl",
          "description": "Default format for generated code snippets"
        },
        "apiHelper.autoValidateSchemas": {
          "type": "boolean",
          "default": true,
          "description": "Automatically validate OpenAPI schemas when loaded"
        },
        "apiHelper.maxHistoryItems": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of request history items to keep"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "apiHelperExplorer",
          "name": "API Helper",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "api-helper-extension.refreshTree",
          "when": "view == apiHelperExplorer",
          "group": "navigation"
        },
        {
          "command": "api-helper-extension.addEnvironment",
          "when": "view == apiHelperExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "api-helper-extension.generateCodeForEndpoint",
          "when": "view == apiHelperExplorer && viewItem == endpoint",
          "group": "inline"
        },
        {
          "command": "api-helper-extension.deleteEnvironment",
          "when": "view == apiHelperExplorer && viewItem == environment",
          "group": "management"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "swagger-parser": "^10.0.3",
    "openapi-types": "^12.1.3",
    "@types/swagger-parser": "^7.0.1"
  },
  "dependencies": {
    "@types/swagger-parser": "^4.0.3",
    "axios": "^1.9.0",
    "openapi-types": "^12.1.3",
    "swagger-parser": "^10.0.3"
  }
}
